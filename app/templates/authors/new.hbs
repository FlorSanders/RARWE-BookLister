{{page-title "New author"}}

<h3 class="text-lg leading-6 font-medium text-gray-500">
    New author
</h3>
<div class="mt-6 grid grid-cols)1 row-gap-6 col-gap-4 sm:grid-cols-6">
    <div class="sm:col-span-4">
        <label for="name" class="block text-sm font-medium leading-5">Name</label>
        <div class="mt-1 relative rounded-md shadow-sm">
            <input id="name" class="w-full text-gray-800 bg-white border rounded-md py-2 px-4" value={{this.name}}
                {{on "input" this.updateName}} />
        </div>
    </div>
    <div class="sm:col-span-4 mt-2">
        <button type="button"
            class="px-4 py-2 rounded bg-green-200 shadow-md hover:shadow-lg hover:text-white hover:bg-green-800"
            {{on "click" this.saveAuthor}}>
            Save
        </button>
    </div>
</div>